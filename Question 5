#include<iostream>
using namespace std;
int main() {
    string str;
    cout<<"enter a string";
    cin>>str;
    int i;
    int l=str.length();
    for(i=0;i<l;i++){
        if(i%2==0){
            for(int j=0;j<=(str[i]-'a');j++){
                printf("#");
            }
        }
        else
        {
                for(int j=0;j<=(str[i]-'a');j++){
                printf("$");
            }
        
        }
    }
}
